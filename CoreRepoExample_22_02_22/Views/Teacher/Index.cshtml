@model IEnumerable<CoreRepoExample_22_02_22.Models.Entity.Teacher>

@{
    ViewData["Title"] = "Eğitmen Listesi";
}
<div class="card col-6">
    <div class="card-body">
        <form method="get" id="filter">
            <div class="form-group">
                <input name="name" class="form-control" placeholder="Eğitmen Adı" value="@ViewBag.Name"/>
            </div>
             <div class="form-group">
                <input name="email" class="form-control" placeholder="Eğitmen Soyadı" value = "@ViewBag.Email"/>
            </div>
            <button class="btn btn-primary">Filtrele</button>
        </form>
    </div>
</div>
<br />
<hr />
<p>
    <a asp-action="Insert" class="btn btn-success">Yeni Oluştur</a>
</p>
<table class="table table-bordered table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address.Country)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address.Country)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.ID}, new { @class = "btn btn-warning" }) -
                @Html.ActionLink("Details", "Detail", new {  id=item.ID  }, new { @class = "btn btn-info" }) -
                @Html.ActionLink("Delete", "Delete", new {  id=item.ID  }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>