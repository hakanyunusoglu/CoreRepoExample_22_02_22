@model IEnumerable<CoreRepoExample_22_02_22.Models.Entity.Request>

@{
    ViewData["Title"] = "Liste";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Talep Listesi</title>
</head>
<body>
<p>
    <a asp-action="Ekle" class="btn btn-success">Yeni Oluştur</a>
</p>
<table class="table table-bordered table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mesaj)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mesaj)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new {  id=item.ID}, new { @class = "btn btn-warning" }) -
                @Html.ActionLink("Detay", "Detail", new {  id=item.ID  }, new { @class = "btn btn-info" }) -
                @Html.ActionLink("Sil", "Delete", new {  id=item.ID  }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
