@model IEnumerable<CoreRepoExample_22_02_22.Models.Entity.Request>

@{
    ViewData["Title"] = "Talep Liste";
}
<div class="card col-6">
    <div class="card-body">
        <form method="get" id="filter">
            <div class="form-group">
                <input name="name" class="form-control" placeholder="Talep Adı" value="@ViewBag.Name"/>
            </div>
             <div class="form-group">
                <input name="email" class="form-control" placeholder="Talep Email" value = "@ViewBag.Email"/>
            </div>
             <div class="form-group">
                <input name="tel" class="form-control" placeholder="Talep Tel" value = "@ViewBag.Tel"/>
            </div>
             <div class="form-group">
                <input name="mesaj" class="form-control" placeholder="Talep Mesaj" value = "@ViewBag.Mesaj"/>
            </div>
            <button class="btn btn-primary">Filtrele</button>
        </form>
    </div>
</div>
<br />
<hr />
<p>
    <a asp-action="Ekle" class="btn btn-success">Yeni Oluştur</a>
</p>
<table class="table table-bordered table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mesaj)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mesaj)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "EditTalep", new {  id=item.ID}, new { @class = "btn btn-warning" }) -
                @Html.ActionLink("Detay", "DetailTalep", new {  id=item.ID  }, new { @class = "btn btn-info" }) -
                @Html.ActionLink("Sil", "DeleteTalep", new {  id=item.ID  }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>