@model IEnumerable<CoreRepoExample_22_02_22.Models.Entity.Course>

@{
    ViewData["Title"] = "Kurslar";
}

<p>
    <a asp-action="KursEkle" class="btn btn-success">Yeni Oluştur</a>
</p>
<table class="table table-bordered table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aciklama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fiyat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aktif)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aciklama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aktif)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new {  id=item.ID}, new { @class = "btn btn-warning" }) -
                @Html.ActionLink("Detay", "Detail", new {  id=item.ID  }, new { @class = "btn btn-info" }) -
                @Html.ActionLink("Sil", "Delete", new {  id=item.ID  }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>