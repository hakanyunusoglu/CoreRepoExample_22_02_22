@model IEnumerable<CoreRepoExample_22_02_22.Models.Entity.Course>

@{
    ViewData["Title"] = "Kurslar";
}
<div class="card col-6">
    <div class="card-body">
        <form method="get" id="filter">
            <div class="form-group">
                <input name="name" class="form-control" placeholder="Kursun Adı" value="@ViewBag.Name"/>
            </div>
             <div class="form-group">
                <input name="price" class="form-control" placeholder="Kursun Fiyatı" value = "@ViewBag.Price"/>
            </div>
             <div class="custom-control custom-checkbox">
                <input name="isActive" class="custom-control-input" type="checkbox" id="isActive" checked="@ViewBag.isActive"/>
                <label class="custom-control-label" for="isActive">Aktiflik Durumu</label>
            </div>
            <button class="btn btn-primary">Filtrele</button>
        </form>
    </div>
</div>
<br />
<hr />
<p>
    <a asp-action="KursEkle" class="btn btn-success">Yeni Oluştur</a>
</p>
<table class="table table-bordered table-hover table-striped">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aciklama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fiyat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aktif)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aciklama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aktif)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new {  id=item.ID}, new { @class = "btn btn-warning" }) -
                @Html.ActionLink("Detay", "Detail", new {  id=item.ID  }, new { @class = "btn btn-info" }) -
                @Html.ActionLink("Sil", "Delete", new {  id=item.ID  }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>

