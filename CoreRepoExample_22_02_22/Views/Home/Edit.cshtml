@model CoreRepoExample_22_02_22.Models.EntityVM

@{
    ViewData["Title"] = "Kurs Düzenle";
}

<h4>Kurs Düzenle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Courses.ID" class="control-label"></label>
                <input asp-for="Courses.ID" class="form-control" readonly/>
                <span asp-validation-for="Courses.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courses.Ad" class="control-label"></label>
                <input asp-for="Courses.Ad" class="form-control" />
                <span asp-validation-for="Courses.Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courses.Aciklama" class="control-label"></label>
                <input asp-for="Courses.Aciklama" class="form-control" />
                <span asp-validation-for="Courses.Aciklama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Courses.Fiyat" class="control-label"></label>
                <input asp-for="Courses.Fiyat" class="form-control" />
                <span asp-validation-for="Courses.Fiyat" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Courses.Teacher.Name" class="control-label"></label>
                <select class="form-control" asp-for="Courses.TeacherID" asp-items="@(new SelectList(Model.tList,"ID","Name"))">
        <option value="0">--- Eğitmen Seçiniz ---</option>
    </select>
    <p>Sadece uygun eğitmenler görüntülenmektedir!</p>
    <span asp-validation-for="Courses.TeacherID" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Courses.Aktif" /> @Html.DisplayNameFor(model => model.Courses.Aktif)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-success" />
                 <a asp-action="KursListe" class="btn btn-primary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>
